<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.demo.module.selectTable.mapper.AllTableMapper">

    <resultMap id="BaseResultMap" type="com.demo.module.selectTable.entity.AllTable">
        <!--@Table -->
        <result property="tableName" column="TABLE_NAME" jdbcType="VARCHAR"/>
        <result property="tableType" column="TABLE_TYPE" jdbcType="VARCHAR"/>
        <result property="tableRows" column="TABLE_ROWS" jdbcType="INTEGER"/>
        <result property="createTime" column="CREATE_TIME" jdbcType="TIMESTAMP"/>
    </resultMap>
    <select id="getTableName" resultMap="BaseResultMap">
        select TABLE_NAME ,TABLE_TYPE, TABLE_ROWS ,CREATE_TIME
         from  information_schema.tables
         where TABLE_SCHEMA ='MYSQL'
        limit #{offset}, #{limit}
    </select>
</mapper>